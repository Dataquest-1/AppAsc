{
  "name": "app-asc-monorepo",
  "version": "0.5.0",
  "description": "Sistema de gestiÃ³n de mantenimiento industrial multi-tenant",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "docker:up": "docker-compose -f infra/compose/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/compose/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/compose/docker-compose.yml logs -f",
    "clean": "turbo run clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.12.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.0.0"
}
