# Base de datos
DATABASE_URL=postgresql://asc_user:asc_password@localhost:5432/asc_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Almacenamiento S3-compatible (MinIO)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=asc_minio_user
STORAGE_SECRET_KEY=asc_minio_password
STORAGE_BUCKET=asc-documents
STORAGE_REGION=us-east-1

# URLs de la aplicación
APP_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001

# Email (MailHog para desarrollo)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=
MAIL_PASS=
MAIL_FROM=noreply@asc.local
MAIL_SECURE=false

# NextAuth (Frontend)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production-min-32-chars

# API Externa
API_RATE_LIMIT_TTL=60
API_RATE_LIMIT_LIMIT=100

# Configuración de archivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# Configuración de logs
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Configuración de CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Configuración de sesiones
SESSION_SECRET=your-super-secret-session-key-change-in-production-min-32-chars

# Configuración de encriptación
ENCRYPTION_KEY=your-super-secret-encryption-key-change-in-production-32-chars

# Configuración de webhooks
WEBHOOK_SECRET=your-super-secret-webhook-key-change-in-production

# Configuración de reportes
REPORTS_TEMP_DIR=./tmp/reports
REPORTS_RETENTION_DAYS=30

# Configuración de gamificación
GAMIFICATION_ENABLED=true

# Configuración de notificaciones
NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false

# Configuración de métricas
METRICS_ENABLED=true
METRICS_PORT=9090

# Configuración de health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Configuración de backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
